<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalculatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/operand1"
            style="@style/operand"
            android:hint="값1" />

        <TextView
            android:id="@+id/operator"
            style="@style/operator"
            android:hint="+" />

        <EditText
            android:id="@+id/operand2"
            style="@style/operand"
            android:hint="값2" />

        <TextView
            android:id="@+id/equal"
            style="@style/operator"
            android:hint="=" />

        <TextView
            android:id="@+id/answer"
            style="@style/operand"
            android:hint="답" />
    </LinearLayout>

    <LinearLayout
        style="@style/linearlayout"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                style="@style/linearlayout"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/linearlayout"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/num1"
                        style="@style/numbtn"
                        android:text="1" />

                    <Button
                        android:id="@+id/num2"
                        style="@style/numbtn"
                        android:text="2" />

                    <Button
                        android:id="@+id/num3"
                        style="@style/numbtn"
                        android:text="3" />
                </LinearLayout>

                <LinearLayout
                    style="@style/linearlayout"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/num4"
                        style="@style/numbtn"
                        android:text="4" />

                    <Button
                        android:id="@+id/num5"
                        style="@style/numbtn"
                        android:text="5" />

                    <Button
                        android:id="@+id/num6"
                        style="@style/numbtn"
                        android:text="6" />
                </LinearLayout>

                <LinearLayout
                    style="@style/linearlayout"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/num7"
                        style="@style/numbtn"
                        android:text="7" />

                    <Button
                        android:id="@+id/num8"
                        style="@style/numbtn"
                        android:text="8" />

                    <Button
                        android:id="@+id/num9"
                        style="@style/numbtn"
                        android:text="9" />
                </LinearLayout>

                <LinearLayout
                    style="@style/linearlayout"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/num0"
                        style="@style/numbtn"
                        android:text="0" />

                    <Button
                        android:id="@+id/equalbtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:onClick="calculating"
                        android:text="="
                        android:textSize="30dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/clear"
                style="@style/opbtn"
                android:text="C" />

            <Button
                android:id="@+id/plus"
                style="@style/opbtn"
                android:text="+" />

            <Button
                android:id="@+id/minus"
                style="@style/opbtn"
                android:text="-" />

            <Button
                android:id="@+id/mult"
                style="@style/opbtn"
                android:text="*" />

            <Button
                android:id="@+id/div"
                style="@style/opbtn"
                android:text="/" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>